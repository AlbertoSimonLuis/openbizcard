<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="320px" android:layout_height="40px" android:gravity="center_vertical"
	android:background="#2f4e9b">
	<TableRow android:layout_width="wrap_content"
		android:layout_height="wrap_content">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="159px" android:layout_height="wrap_content"
			android:gravity="right" android:orientation="vertical"
			android:background="#2f4e9b">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="right" android:orientation="horizontal"
				android:background="#2f4e9b">
				<TextView android:id="@+id/guest_scorer"
					android:layout_marginLeft="2px" android:layout_width="wrap_content"
					android:layout_height="18px" android:singleLine="true"
					android:layout_gravity="right" android:layout_marginRight="3px"
					android:textColor="#ffffff" android:textSize="11sp" android:text="guest scorer"></TextView>
				<ImageView android:id="@+id/guest_ball" android:paddingRight="10px"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_gravity="right|center_vertical" android:src="@drawable/game_goal" />
			</LinearLayout>
			<ImageView android:id="@+id/guest_line"
				android:layout_width="154px" android:layout_height="4px"
				android:layout_gravity="right" android:src="@drawable/game_detail_score_line" />
		</LinearLayout>
		<TextView android:id="@+id/game_detail_blank1"
			android:layout_height="18px" android:text="" android:layout_width="2px"></TextView>
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="159px" android:layout_height="wrap_content"
			android:gravity="right" android:orientation="vertical"
			android:background="#2f4e9b">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:gravity="right" android:orientation="horizontal" android:paddingRight="5px"
				android:background="#2f4e9b">
				<TextView android:id="@+id/home_scorer"
					android:layout_width="wrap_content" android:layout_height="18px"
					android:singleLine="true" android:layout_gravity="right"
					android:gravity="right" android:layout_marginRight="3px"
					android:textColor="#ffffff" android:textSize="11sp" android:text="home scorer"></TextView>
				<ImageView android:id="@+id/home_ball"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:layout_gravity="right|center_vertical" android:src="@drawable/game_goal" />
			</LinearLayout>
			<ImageView android:id="@+id/home_line"
				android:layout_width="145px" android:layout_height="4px" android:layout_marginRight="5px"
				android:layout_gravity="right" android:src="@drawable/game_detail_score_line" />
		</LinearLayout>
	</TableRow>
</TableLayout>