<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="320px"
			    android:layout_height="80px"
			    android:paddingRight="23dip"
			    android:background="@drawable/white_bar_over">	
			    <TableRow	android:layout_width="320px"
							android:layout_height="15px">
					<TextView android:id="@+id/small_main_headline"
						android:layout_width="320px"
						android:layout_height="15px"
			    		android:layout_gravity="right"
			    		android:paddingRight="20dip"
			    		android:textColor="#000"
			    		android:textStyle="bold"
			    		android:textSize="14sp"
			    		android:text=""
			    		android:layout_span="2"
			    		></TextView>
		    	</TableRow>
		    	<TableRow	android:layout_width="320px"
							android:layout_height="65px">
					<TextView android:id="@+id/small_main_sc"
						android:layout_width="235px"
						android:layout_height="65px"
			    		android:layout_gravity="right"
			    		android:textColor="#333"
			    		android:textStyle="normal"
			    		android:textSize="13sp" 
			    		android:text=""			    		
			    		></TextView>
		    		<ImageView android:id="@+id/small_main_image"
		    			android:paddingRight="8dip"
						android:layout_width="85px"
						android:layout_height="65px"
			    		android:layout_gravity="center"
			    		android:src="@drawable/loading_sub"
		    		></ImageView>
		    	</TableRow>
</TableLayout>