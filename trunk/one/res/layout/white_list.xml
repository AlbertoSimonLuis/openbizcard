<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical"
			    android:layout_width="320px"
			    android:layout_height="80px"		
			    android:layout_marginRight="23px"	
			    android:background="@drawable/white_bar">	
				<TextView android:id="@+id/small_main_headline"
					android:layout_width="wrap_content"
					android:layout_height="18px"
		    		android:layout_gravity="right"
		    		android:paddingRight="20dip"
		    		android:textColor="#445ea1"
		    		android:textStyle="bold"
		    		android:textSize="14sp"
		    		android:text=""
		    		></TextView>
				<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
					android:orientation="horizontal"
				    android:layout_width="320px"
				    android:layout_height="65px">	
					<TextView android:id="@+id/small_main_sc"
						android:layout_width="235px"
						android:layout_height="65px"
			    		android:layout_gravity="right"
			    		android:textColor="#333"
			    		android:textStyle="normal"
			    		android:textSize="13sp" 
			    		android:text=""			    		
			    		></TextView>
		    		<ImageView android:id="@+id/small_main_image"
		    			android:paddingRight="8dip"
						android:layout_width="85px"
						android:layout_height="62px"
			    		android:layout_gravity="center"
			    		android:src="@drawable/loading_sub"
		    		></ImageView>
		    	</LinearLayout>
</LinearLayout>