<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="320px"
	android:layout_height="172px" android:background="@drawable/blue_main_bar">
	<TextView android:id="@+id/main_headline"
		android:layout_width="320px" android:layout_height="20px"
		android:paddingRight="15px" android:layout_marginLeft="5px"
		android:layout_gravity="center" android:textColor="#ffffff"
		android:textStyle="bold" android:textSize="16sp" android:text="Article : title"
		android:layout_span="2"></TextView>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="320px"
		android:layout_height="122px">

		<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="140px" android:layout_marginTop="7px"
			android:layout_marginLeft="10px" android:layout_height="106px">

			<ImageView android:id="@+id/main_image"
				android:layout_width="140px" android:layout_height="106px"
				android:layout_gravity="left" android:src="@drawable/loading_main"></ImageView>

			<ImageView android:id="@+id/rounded_corner"
				android:layout_width="140px" android:layout_height="106px"
				android:layout_gravity="left" android:src="@drawable/rounded_corner"></ImageView>

		</FrameLayout>
		<TextView android:id="@+id/main_sc" android:layout_width="wrap_content"
			android:layout_height="117px" android:layout_gravity="right|center_vertical"
			android:gravity="center_vertical" android:paddingRight="10px"
			android:textColor="#ffffff" android:textStyle="normal"
			android:textSize="14sp" android:text="Article : Description"></TextView>
	</LinearLayout>
</LinearLayout>