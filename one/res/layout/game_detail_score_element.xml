<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="320px"
			    android:layout_height="30px"
			    android:background="#16329e">	
			    <TableRow	android:layout_width="wrap_content"
							android:layout_height="wrap_content">
					<LinearLayout
						  xmlns:android="http://schemas.android.com/apk/res/android"
						  android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:gravity="right"
						  android:orientation="vertical"
						  android:background="#16329e">
						<LinearLayout
							  xmlns:android="http://schemas.android.com/apk/res/android"
							  android:layout_width="wrap_content"
							  android:layout_height="wrap_content"
							  android:gravity="right"
							  android:orientation="horizontal"
							  android:background="#16329e">
								<TextView android:id="@+id/guest_scorer"
									android:layout_width="wrap_content"
									android:layout_height="18px"
									android:layout_gravity="right"
									android:layout_marginRight="8px"
						    		android:textColor="#ffffff"
						    		android:textSize="13sp"
						    		android:text="guest scorer"
						    		android:visibility="invisible"
						    		></TextView>
					    		<ImageView android:id="@+id/guest_ball"
					    			android:layout_width="20px"
									android:layout_height="20px"
									android:layout_gravity="right"
									android:src="@drawable/game_detail_ball"	
									android:visibility="invisible"
					    		/>
			    			</LinearLayout>
			    			<ImageView android:id="@+id/guest_line"
					    			android:layout_width="145px"
									android:layout_height="4px"
									android:layout_gravity="right"
									android:visibility="invisible"
									android:src="@drawable/game_detail_score_line"	
					    		/>
			    	</LinearLayout>
			    	<TextView android:id="@+id/game_detail_blank1"
						android:layout_width="30px"
						android:layout_height="18px"
			    		android:text=""
			    		></TextView>
					<LinearLayout
						  xmlns:android="http://schemas.android.com/apk/res/android"
						  android:layout_width="wrap_content"
						  android:layout_height="wrap_content"
						  android:gravity="left"
						  android:orientation="vertical"
						  android:background="#16329e">
						<LinearLayout
							  xmlns:android="http://schemas.android.com/apk/res/android"
							  android:layout_width="wrap_content"
							  android:layout_height="wrap_content"
							  android:gravity="left"
							  android:orientation="horizontal"
							  android:background="#16329e">
							  <ImageView android:id="@+id/home_ball"
					    			android:layout_width="20px"
									android:layout_height="20px"
									android:layout_gravity="left"
									android:visibility="invisible"
									android:src="@drawable/game_detail_ball"	
					    		/>
								<TextView android:id="@+id/home_scorer"
									android:layout_width="wrap_content"
									android:layout_height="18px"
									android:layout_gravity="left"
									android:layout_marginLeft="8px"
						    		android:textColor="#ffffff"
						    		android:textSize="13sp"
						    		android:visibility="invisible"
						    		android:text="home scorer"
						    		></TextView>					    		
			    			</LinearLayout>
			    			<ImageView android:id="@+id/home_line"
					    			android:layout_width="145px"
									android:layout_height="4px"
									android:layout_gravity="left"
									android:visibility="invisible"
									android:src="@drawable/game_detail_score_line"	
					    		/>
			    	</LinearLayout>
		    	</TableRow>
</TableLayout>